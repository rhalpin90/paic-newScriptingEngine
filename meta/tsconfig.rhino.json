{
    "include": [
        "../src/**/*.js",
        "rhino.d.ts"
    ],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": true,
        "strictNullChecks": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "useUnknownInCatchVariables": false,
        "moduleDetection": "force",
        "paths": {
            "am-types": ["../am-types/index.d.ts"],
            "*": [
                "../src/library/*"
            ]
        },
    },
}
